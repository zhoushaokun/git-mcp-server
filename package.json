    "@eslint/js": "^9.37.0",
    "@types/bun": "^1.3.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.7.1",
    "@types/node-cron": "^3.0.11",
    "@types/papaparse": "^5.3.16",
    "@types/sanitize-html": "^2.16.0",
    "@types/validator": "13.15.3",
    "@vitest/coverage-v8": "3.2.4",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "bun-types": "^1.3.0",
    "clipboardy": "^5.0.0",
    "depcheck": "^1.4.7",
    "eslint": "^9.37.0",
    "execa": "^9.6.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "msw": "^2.11.5",
    "prettier": "^3.6.2",
    "typedoc": "^0.28.13",
    "typescript": "^5.9.3",
    "typescript-eslint": "8.46.0",
    "vite": "^7.1.9",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "typescript",
    "MCP",
    "model-context-protocol",
    "mcp-server",
    "llm-tools",
